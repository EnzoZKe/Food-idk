@model AAAAA_FUNCIONA_MDS.Models.Categoria

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-white text-center">Editar</h1>

<h4 class="text-white text-center">Categoria</h4>

<div class="text-white">
    <div class="container text-light InfoSection">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoriaId" />
            <div class="form-group">
                <label asp-for="NomeCategoria" class="control-label">Nome da Categoria</label>
                <input asp-for="NomeCategoria" class="form-control" />
                <span asp-validation-for="NomeCategoria" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Salvar " class="btn btn-dark mt-4 ButtonEntrar" />
                <a asp-action="Index" class="btn btn-dark mt-4 ButtonEntrar">Voltar para a lista</a>
            </div>
        </form>
    </div>
</div>

