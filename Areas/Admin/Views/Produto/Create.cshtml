@model AAAAA_FUNCIONA_MDS.Models.Produto

@{
    ViewData["Title"] = "Create";
}

<h1></h1>

<h4 class="text-white ms-5">Produto</h4>

<div class="row text-white">
    <div class="container col-12 col-lg-6 m-5 row text-light InfoSection ">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group m-4">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control " />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group m-4">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control " />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group m-4">
                <label asp-for="Foto" class="control-label"></label>
                <input asp-for="Foto" class="form-control " />
                <span asp-validation-for="Foto" class="text-danger"></span>
            </div>
            <div class="form-group form-check m-4">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="EmEstoque" />Em estoque
                </label>
            </div>
            <div class="form-group m-4">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" class="form-control " />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="form-group m-4">
                <label asp-for="CategoriaId" class="control-label">Categoria</label>
                <select asp-for="CategoriaId" class ="form-control  " asp-items="ViewBag.CategoriaId"></select>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Criar" class="btn btn-dark mt-3 ButtonEntrar align-items-center" />
                <a asp-action="Index" class="btn btn-dark mt-3 ButtonEntrar align-items-center">Voltar para a lista</a>
            </div>
        </form>
    </div>
</div>

