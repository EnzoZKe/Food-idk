@model AAAAA_FUNCIONA_MDS.Models.Usuario

@{
    ViewData["Title"] = "Create";
}



<main class="container">
    <br>
    <h1 class="text-light ms-5 ">Usu√°rio</h1>
    <div class="container text-light InfoSection ">
        <div class="">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-3 mr-1">

                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control InputInfo" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group mb-3 white-nowrap text-break">
                    <label asp-for="Login" class="control-label"></label>
                    <input asp-for="Login" class="form-control InputInfo" />
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Senha" class="control-label"></label>
                    <input asp-for="Senha" class="form-control InputInfo" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>

                <div class="form-group mb-3 text-break">
                    <label asp-for="FotoPFP" class="control-label"></label>
                    <input asp-for="FotoPFP" class="form-control InputInfo" />
                    <span asp-validation-for="FotoPFP" class="text-danger"></span>
                </div>

                <div class="form-group text-center mb-3 ">
                    <a asp-action="Index" class="btn btn-dark m-2 ButtonEntrar">Voltar para a lista</a>
                    <input type="submit" value="Criar" class="btn btn-dark m-2 ButtonEntrar" />
                </div>

            </form>
        </div>
    </div>
</main>
